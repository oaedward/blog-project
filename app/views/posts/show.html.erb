          <a href="#"
            class="px-4 py-1 bg-purple-700 text-gray-200 inline-flex items-center justify-center mb-2">Full Stack</a>
          <h2 class="text-4xl font-semibold text-gray-100 leading-tight">
            <%= @post.title %>
          </h2>
          <div class="flex mt-3">
            <img src="https://randomuser.me/api/portraits/men/97.jpg"
              class="h-10 w-10 rounded-full mr-2 object-cover" />
            <div>
              <p class="font-semibold text-gray-200 text-sm"> User Name </p>
              <p class="font-semibold text-gray-400 text-xs"> <%= @post.created_at %> </p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="px-4 lg:px-0 mt-12 text-gray-700 max-w-screen-md mx-auto text-lg leading-relaxed">
