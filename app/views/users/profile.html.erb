<div class="my-28">
	<div class="relative max-w-md mx-auto md:max-w-2xl min-w-0 break-words bg-gray-50 dark:bg-gray-800 w-full mb-6 shadow-lg rounded-xl mt-16">
		<div class="px-6">
			<div class="flex flex-wrap justify-center">
				<div class="w-full flex justify-center">
					<div class="relative">
						<img src="https://github.com/creativetimofficial/soft-ui-dashboard-tailwind/blob/main/build/assets/img/team-2.jpg?raw=true" class="shadow-xl rounded-full align-middle border-none absolute -m-16 -ml-20 lg:-ml-16 max-w-[150px]"/>
					</div>
				</div>
				<div class="w-full text-center mt-20">
					<div class="flex justify-center lg:pt-4 pt-8 pb-0">
						<div class="p-3 text-center">
							<span class="text-xl font-bold block uppercase tracking-wide dark:text-gray-50 text-slate-700"><%=(@user.views)%></span>
							<span class="text-sm text-slate-400 dark:text-gray-50">Views</span>
						</div>
						<div class="p-3 text-center">
							<span class="text-xl font-bold block uppercase tracking-wide dark:text-gray-50 text-slate-700"><%=(@user.posts.count)%></span>
							<span class="text-sm text-slate-400 dark:text-gray-50">Posts</span>
						</div>
						<div class="p-3 text-center">
							<span class="text-xl font-bold block uppercase tracking-wide dark:text-gray-50 text-slate-700"><%=(@user.comments.count)%></span>
							<span class="text-sm dark:text-gray-50 text-slate-400">Comments</span>
						</div>
					</div>
				</div>
			</div>
			<div class="text-center mt-2">
				<h3 class="text-2xl text-slate-700 dark:text-gray-50 font-bold leading-normal mb-1"> <%= @user.name%> </h3>
				<% if @user.work %>
					<div class="text-sm mt-0 mb-2 dark:text-gray-50 text-slate-400 font-medium">
						<i class="fas fa-briefcase mr-2 dark:text-gray-50 text-slate-400 opacity-75"></i><%= (@user.work)%>
					</div>
				<% end %>
				<% if @user.location %>
					<div class="text-xs mt-0 mb-2 text-slate-400 dark:text-gray-50 font-medium ">
						<i class="fas fa-map-marker-alt mr-2 dark:text-gray-50 text-slate-400 opacity-75"></i><%= (@user.location)%>
					</div>
				<% end %>
			</div>
			<div class="mt-6 py-6 border-t border-slate-200 text-center">
				<div class="flex flex-wrap justify-center">
					<div class="w-full px-4">
						<% if @user.bio%>
							<p class="font-light leading-relaxed dark:text-gray-50 text-slate-600 mb-4"><%= @user.bio%></p>
						<% end %>
						<% if current_user == @user %>
							<%= link_to "Manage Account", edit_user_registration_path, class: "font-normal text-slate-700 dark:text-gray-50 hover:text-slate-400"  %>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
